<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="16dp"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view_cart_top"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="48dp"
        android:background="@android:color/black"/>

    <LinearLayout
        android:layout_below="@+id/view_cart_top"
        android:layout_width="match_parent"
        android:layout_marginTop="2dp"
        android:layout_height="88dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/remove_circle"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:layout_marginLeft="24dp"
            android:src="@drawable/coins_icon"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik"
                android:layout_marginTop="16dp"
                android:text="JOHN PATRICK"
                android:textAppearance="?attr/textAppearanceOverline"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik"
                android:text="Character"
                android:layout_marginTop="8dp"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/cart_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rubik"
                    android:layout_marginTop="16dp"
                    android:layout_alignParentRight="true"
                    android:text="$240.00"
                    android:textAppearance="?attr/textAppearanceOverline"
                    android:textSize="14dp" />


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="84dp"
                    android:layout_height="36dp"
                    app:boxStrokeColor="@color/textInputOutlineColor"
                    android:layout_below="@+id/cart_price"
                    android:layout_alignParentRight="true"
                    app:hintTextColor="@color/textColorPrimary"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                    <AutoCompleteTextView
                        android:id="@+id/filled_exposed_dropdown"
                        android:layout_width="match_parent"
                        android:editable="false"
                        style="@style/Widget.Shrine.RemoveInputLayout"
                        android:textColor="#442C2E"
                        android:layout_height="wrap_content"/>

                </com.google.android.material.textfield.TextInputLayout>

            </RelativeLayout>

        </LinearLayout>




    </LinearLayout>



</RelativeLayout>
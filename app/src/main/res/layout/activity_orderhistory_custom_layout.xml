<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="88dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="56dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/order_imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/blog_angry"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="176dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:orientation="vertical">

            <TextView
               android:id="@+id/order_textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik"
                android:text="Cheese Burgers"
                android:textAppearance="?attr/textAppearanceHeadline6" />

            <TextView
                android:id="@+id/order_textViewOwnerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik"
                android:text="Cheese Burgers"
                android:textAppearance="?attr/textAppearanceCaption" />

            <TextView
                android:id="@+id/order_textViewSubTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/rubik"
                android:text="Cheese Burgers"
                android:textAppearance="?attr/textAppearanceSubtitle2" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/order_textViewDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="62dp"
                android:fontFamily="@font/rubik"
                android:text="JUN 15"
                android:textAppearance="?attr/textAppearanceCaption"
                android:textColor="@android:color/holo_blue_light" />


            <TextView
                android:id="@+id/order_textViewQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik"
                android:layout_alignParentBottom="true"
                android:textAppearance="?attr/textAppearanceBody2"
                android:text="2 pcs"/>
        </RelativeLayout>



    </LinearLayout>


</LinearLayout>